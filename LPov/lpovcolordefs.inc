#declare TRANS_GLITTER_MAT = 7;
#declare TRANS_FLUOR_MAT = 8;
#declare PHOS_MAT = 9;
#declare SIMI_TRANS_MAT = 10;

#macro MakeColor(R, G, B, MAT, SLOPE)

texture {
  #switch (MAT)
    #case (TRANS_MAT)
      pigment { color rgbft <R,G,B,tFILTER,tTRANSMIT> }
    #break
    #case (TRANS_GLITTER_MAT)  
      pigment { color rgbft <R,G,B,tgFILTER,tgTRANSMIT> }
    #break
    #case (TRANS_FLUOR_MAT)  
      pigment { color rgbft <R,G,B,tfFILTER,tfTRANSMIT> }
    #break
    #case (PHOS_MAT)  
      pigment { color rgbft <R,G,B,pFILTER,pTRANSMIT> }
    #break
    #case (SIMI_TRANS_MAT)  
      pigment { color rgbft <R,G,B,zFILTER,zTRANSMIT> }
    #break
    #else
      pigment { color rgbft <R,G,B,0,0> }
  #end
  
  #if (SLOPE)  
    normal { NORMAL_SLOPE }
  #else
    normal { NORMAL_NOSLOPE }
  #end
      
  #switch (MAT)
    #case (NORMAL_MAT)
      finish { FIN }
    #break
    #case (FLUORESCENT_MAT)
      finish { fFIN }
    #break
    #case (CHROME_MAT)
      finish { mcFIN }
    #break
    #case (DULL_METAL_MAT)
      finish { mdFIN }
    #break
    #case (IRID_METAL_MAT)
      finish { miFIN }
    #break
    #case (TRANS_MAT)
      finish { tFIN }
    #break
    #case (TRANS_GLITTER_MAT)
      finish { tgFIN }
    #break
    #case (TRANS_FLUOR_MAT)
      finish { tfFIN }
    #break
    #case (PHOS_MAT)
      finish { pFIN }
    #break
    #case (SIMI_TRANS_MAT)
      finish { zFIN }
    #break
  #end  
}  
  
#end

